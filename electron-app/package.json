{
  "name": "buddhist-rag-app",
  "version": "1.0.0",
  "description": "A desktop RAG application for Buddhist PDF texts",
  "main": "src/main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "npx electron . --dev",
    "build": "npx electron-builder",
    "build-all": "npx electron-builder --win --mac --linux",
    "dist": "npm run build-all"
  },
  "build": {
    "appId": "com.buddhist-rag.app",
    "productName": "Buddhist RAG",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "../python-backend/dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Education"
    }
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "author": "Buddhist RAG Project",
  "license": "MIT"
}